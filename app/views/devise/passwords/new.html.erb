<h2 class="text-white text-center my-4">Forgot your password?</h2>

<div class="review-form mx-auto">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :email, class: "text-white pb-2 fs-5" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-input text-dark mb-2", autocomplete: "email" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

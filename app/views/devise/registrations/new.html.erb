<h2 class="text-white my-4 text-center">Sign up</h2>

<div class="review-form mx-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field, class: "mb-3">
    <%= f.label :first_name, class: "fs-5 text-white mb-2" %><br />
    <%= f.text_field :first_name, id: "first_name", class: "form-input mb-3 fs-5", autofocus: true %>
  </div>
  <div class="field, class: "mb-3">
    <%= f.label :surname, class: "fs-5 text-white mb-2" %><br />
    <%= f.text_field :surname, id: "surname", class: "form-input mb-3 fs-5", autofocus: true %>
  </div>
  <div class="field, class: "mb-3">
    <%= f.label :username, class: "fs-5 text-white mb-2" %><br />
    <%= f.text_field :username, id: "username", class: "form-input mb-3 fs-5", autofocus: true %>
  </div>
  <div class="field, class: "mb-3">
    <%= f.label :email, class: "fs-5 text-white mb-2" %><br />
    <%= f.email_field :email, id: "email", class: "form-input mb-3 fs-5", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "fs-5 text-white mb-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id: "password", class: "form-input mb-3 fs-5", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "fs-5 text-white mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation", class: "form-input mb-3 fs-5" %>
  </div>

  <div class="actions pb-3">
<div class="py-3">
<%= f.submit "Sign up", class: "text-dark fs-5" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>


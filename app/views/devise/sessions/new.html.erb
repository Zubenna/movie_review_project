<h2 class="my-4 text-center text-white">Log in</h2>
<div class="login-form mx-auto">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "fs-5, text-white mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input fs-5 text-dark mb-4" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "fs-5, text-white mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input fs-5 text-dark" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-2 text-white">
      <%= f.check_box :remember_me, class: "text-white" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "Log in", class: "fs-5 px-2" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>


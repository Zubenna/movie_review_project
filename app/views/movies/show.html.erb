<h1 class="text-center"> Movie Show Page </h1>
<div class="container-fluid">
   <div class="container">
     <div class="row">
      <div class="col-md-4">
      <div>
      <%= image_tag(@movie.thumbnail.variant(resize_to_limit: [400, 200])) %>
      </div>
      <div>
      <%= video_tag(url_for(@movie.clip), controls: true, style:"width:200px; height:150") %>
      </div>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Title:</strong></td>
              <td><%= @movie.title %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= @movie.description %></td>
            </tr>
            <tr>
              <td><strong>Movie length:</strong></td>
              <td><%= @movie.movie_length %></td>
            </tr>
            <tr>
              <td><strong>Director:</strong></td>
              <td><%= @movie.director %></td>
            </tr>
            <tr>
              <td><strong>Rating:</strong></td>
              <td><%= @movie.ratings %></td>
            </tr>
            <tr>
              <td><strong>Category:</strong></td>
              <td><%= @movie.category %></td>
            </tr>
           </tbody>
          </table>
          <%= link_to "Write A Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
       <h1 class="review_title"><%= @movie.title %></h1>
       <p><%= @movie.description %></p>

       <% if @reviews.blank? %>
         <h3>No reviews just yet, would you like to add the first?</h3>
         <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
       <% else %>
         <% @reviews.each do |review| %>
          <div class="review">
            <p><%= review.rating %></p>
            <p><%= review.comment %></p>
          </div>
        <% end %>
      <% end %>
     </dv>
    </div>
  </div>
  <%= link_to 'Edit', edit_movie_path(@movie) %> | <%= link_to 'Back', movies_path %>


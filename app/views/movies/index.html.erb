<div class="home-cover container-fluid">
<div class="d-flex container justify-content-end">
   <%= link_to "Admin Panel", rails_admin_path, class:"text-white fs-5" if admin? %>
</div>
<div class="row">
   <div class="col-md-8">
   <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="position-relative carousel-item active">
       <div class="thumb-holder position-relative">
          <%= image_tag(@movies[0].thumbnail, class: "thumbnail", style:"width:100%; height:590px") if @movies[0].thumbnail.attached? %>
       </div>
       <div class="clip-box position-absolute">
         <%= video_tag(url_for(@movies[0].clip), controls: true, style:"width:600px; height:120px") if @movies[0].clip.attached? %>
        </div>
        <div class="thumb-small position-absolute">
           <%= image_tag(@movies[0].thumbnail) if @movies[0].thumbnail.attached? %>
           <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#000" class="bi bi-bookmark-plus-fill m-0 position-absolute" viewBox="0 0 16 16">
             <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
           </svg>
        </div>
    </div>
    <div class="position-relative carousel-item">
       <div>
          <%= image_tag(@movies[1].thumbnail,  style:"width:100%; height:590px") if @movies[1].thumbnail.attached? %>
       </div>
       <div class="clip-box position-absolute">
         <%= video_tag(url_for(@movies[1].clip), controls: true, style:"width:600px; height:120px") if @movies[1].clip.attached? %>
        </div>
        <div class="thumb-small position-absolute">
        <%= image_tag(@movies[1].thumbnail) if @movies[1].thumbnail.attached? %>
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#000" class="bi bi-bookmark-plus-fill text-white position-absolute m-0" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
        </svg>
     </div>
    </div>
    <div class="position-relative carousel-item">
       <div>
          <%= image_tag(@movies[2].thumbnail,  style:"width:100%; height:590px") if @movies[2].thumbnail.attached? %>
       </div>
       <div class="clip-box position-absolute">
         <%= video_tag(url_for(@movies[2].clip), controls: true, style:"width:600px; height:120px") if @movies[2].clip.attached? %>
        </div>
        <div class="thumb-small position-absolute">
        <%= image_tag(@movies[2].thumbnail) if @movies[2].thumbnail.attached? %>
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#000" class="bi bi-bookmark-plus-fill text-white position-absolute m-0" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
        </svg>
     </div>
    </div>
  </div>
  <button class="position-relative carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="position-absolute carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="position-relative carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="position-absolute carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

</div>
<div class="col-md-4">
<div class="text-left next-box">Up next</div>
<div class="side-slider">
   <div class="d-flex mb-4 position-relative">
      <div class="">
      <%= image_tag(@movies[1].thumbnail, style:"width:100px; height:150px") if @movies[1].thumbnail.attached? %>
      </div>
      <div class="position-absolute side-video">
      <%= video_tag(url_for(@movies[1].clip), controls: true, style:"width:250px; height:80px") if @movies[1].clip.attached? %>
      </div>
   </div>
   <div class="d-flex mb-4 position-relative">
      <div class=" ">
      <%= image_tag(@movies[2].thumbnail, style:"width:100px; height:150px") if @movies[2].thumbnail.attached? %>
      </div>
      <div class="position-absolute side-video">
      <%= video_tag(url_for(@movies[2].clip), controls: true, style:"width:250px; height:80px") if @movies[2].clip.attached? %>
      </div>
   </div>
   <div class="d-flex mb-4 position-relative">
      <div class="">
      <%= image_tag(@movies[0].thumbnail, style:"width:100px; height:150px") if @movies[0].thumbnail.attached? %>
      </div>
      <div class="position-absolute side-video">
      <%= video_tag(url_for(@movies[0].clip), controls: true, style:"width:250px; height:80px") if @movies[0].clip.attached? %>
      </div>
   </div>
</div>
</div>
</div>
<section class="featured-box p-2">
<% if user_signed_in? %>
<div class="container d-flex container justify-content-end ">
      <%= form_tag(movies_path, class: "fs-5, text-white", id: "filter", method: :get) do %>
        <%= label_tag "Select Category" %>
        <div class="mt-2 mb-4">
          <%= select_tag :category, options_for_select(["Select Filter", "Action", "Comedy", "Drama", "Science Fiction", "History", "Documentory", "All"]), onchange: "$('#filter').submit();" %>
        </div>
      <% end %>
</div>
<% end %>
<div class="row">
<% @movies.each do |movie| %>
   <div class="col-sm-6 col-md-2 mx-auto position-relative">
     <div class="position-relative">
     <%= image_tag(movie.thumbnail, style:"width:100%; height:300px") if movie.thumbnail.attached? %>
     <% if user_signed_in? %>
       <%= link_to movie do %>
         <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#000" class="bi bi-bookmark-plus-fill text-white position-absolute" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
         </svg>
       <% end %>
       <% else %>
       <%= link_to new_user_session_path do %>
         <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#000" class="bi bi-bookmark-plus-fill text-white position-absolute" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
         </svg>
       <% end %>
     <% end %>
         <div class="position-absolute bg-white white-circle">
        </div>
     </div>
     <div>
     <%= video_tag(url_for(movie.clip), controls: true, style:"width:100%; height:150px", class: "home-clip") if movie.clip.attached? %>
     </div>
     <div class="position-absolute p-2 movie-info">
       <div class="d-flex p-3">
       <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="yellow" class="bi bi-star-fill" viewBox="0 0 16 16">
         <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
       </svg>
       <% if user_signed_in? %>
         
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="royalblue" class="bi bi-star ms-4" viewBox="0 0 16 16">
            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
          </svg>
          <% else %>
          <%= link_to new_user_session_path do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="royalblue" class="bi bi-star ms-4" viewBox="0 0 16 16">
              <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
             </svg>
          <% end %>
          <% end %>
       </div>
        <p class="text-white px-2"><%= movie.title %></p>
        <button class="btn watch-btn text-center ps-4 d-flex">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="royalblue" class="bi bi-plus-lg ms-3 me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
          </svg>Watchlist
        </button>
     </div>
   </div>
<% end %>
</div>
</section>
</div>
<div class="text-white p-4 d-flex justify-content-end">
<%= will_paginate(@movies) %>
</div>


<div class="review-form mx-auto">
<%= form_for([@movie, @review]) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rating, class: "text-white pb-2 fs-5" %>
    <%= form.number_field :rating, class: "form-input text-dark mb-2" %>
  </div>

  <div class="field">
    <%= form.label :comment, class: "text-white py-2 fs-5" %>
    <%= form.text_area :comment, class: "form-input text-dark mb-2" %>
  </div>

  <div class="actions fs-5">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', movie_path(@movie), class: "text-white fs-5 pt-4" %>
</div>
